@model  List<DataLayer.Entites.Directory>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var item in Model)
            {
            <li>
                <h2>@item.Title </h2>
                <ul>
                   @if (item.Materials != null)
                    {
                        @foreach (var subItem in item.Materials)
                         {
                         <li>
                            <h3>@subItem.Title</h3>
                         </li>
                         } 
                    }
                </ul>
            </li>           
            }
        </ul>       
    </div>
</div>